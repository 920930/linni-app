// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"description": "通知公告",
	"required": ["title", "content"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"title": "通知标题"
		},
		"type": {
			"bsonType": "int",
			"title": "通知类型",
			"description": "通知类型 0普通公告 1放假通知",
			"enum": [0, 1]
		},
		"start": {
			"bsonType": "timestamp",
			"title": "开始时间",
			"description": "开始时间"
		},
		"end": {
			"bsonType": "timestamp",
			"title": "结束时间",
			"description": "结束时间"
		},
		"content": {
			"bsonType": "string",
			"title": "通知正文",
			"description": "通知正文内容"
		},
		"create_date": {
			"bsonType": "timestamp",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForEdit": {
				"name": "uni-dateformat"
			}
		}
	}
}